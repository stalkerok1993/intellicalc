<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <fragment
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:name="ua.org.s4code.intellicalc.ui.fragment.ExprEditFragment"
        android:id="@+id/fragmentExprEdit"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        tools:layout="@layout/expr_edit" />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="ua.org.s4code.intellicalc.ui.fragment.ExprHistoryFragment"
        android:id="@+id/fragmentExprHistory"
        android:layout_below="@+id/fragmentExprEdit"
        android:layout_centerHorizontal="true"
        tools:layout="@layout/expr_history" />
</RelativeLayout>